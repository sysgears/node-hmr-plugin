{
  "name": "node-hmr-plugin",
  "version": "1.0.1",
  "description": "A Webpack plugin for running node process during development with HMR",
  "repository": "https://github.com/sysgears/node-hmr-plugin.git",
  "author": "Victor Vlasenko <victor.vlasenko@sysgears.com>",
  "license": "MIT",
  "main": "lib/link.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "pnpify tsc -p tsconfig.build.json",
    "watch": "pnpify tsc -p tsconfig.build.json -w",
    "tests": "jest",
    "tests:watch": "jest --watch",
    "test": "yarn tests && yarn lint",
    "lint": "eslint --fix src/**/*.ts",
    "release": "yarn npm publish"
  },
  "files": [
    "README.md",
    "LICENSE",
    "lib/index.js",
    "lib/index.d.ts",
    "lib/index.js.map"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@berry/pnpify": "^0.1.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.11.3",
    "@types/tmp": "^0.1.0",
    "@types/webpack": "^4.32.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.8.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.14.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "tmp": "^0.1.0",
    "typescript": "^3.5.2",
    "wait-for-expect": "^1.2.0",
    "webpack": "^4.38.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix -c tslint.json",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "typescript"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "webpack-log": "^2.0.0"
  },
  "publishConfig": {
    "main": "lib/index.js"
  },
  "dependenciesMeta": {
    "webpack": {
      "unplugged": true
    }
  }
}
